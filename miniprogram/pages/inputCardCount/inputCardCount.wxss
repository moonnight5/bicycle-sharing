.container {
  width: 100%;
  height: 2000rpx;
  background-image: url('http://view.jqueryfuns.com/2019/10/9/a9a16f16bb0b492de56a0fc1b6346f8d/images/login-bg.jpg');
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.loginTitle {
  width: 96%;
  height: 376rpx;
  line-height: 610rpx;
  font-size: xx-large;
  color: white;
  font-weight: bold;
  text-align: center;
}
.loginForm {
  margin-top: 40rpx;
  width: 80%;
}
.formGroup .flex {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  padding: 0 4%;
  height: 78rpx;
  line-height: 78rpx;
  border: 1px solid #B3DFE2;
  border-radius: 46rpx;
  background-color: #B3DFE2;
}
.formGroup .flex label image {
  width: 64rpx;
  height: 64rpx;
}
.formGroup .flex input {
  margin-left: 10rpx;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 36rpx;
}
.formGroup .errMsg {
  font-size: 26rpx;
  color: red;
}
.formGroup .btn {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.formGroup .btn button {
  color: #74C3CA;
  width: 36%;
  border: 1px solid #ffffff;
  overflow: hidden;
  border-radius: 46rpx;
  background-color: #ffffff;
}
.toast {
  width: 250rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 40rpx;
  border-radius: 26rpx;
  overflow: hidden;
  color: #ffffff;
  background-color: #74C3CA;
}